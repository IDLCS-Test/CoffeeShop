@using PALUNA.Models
@model Sanpham


@{
    ViewBag.Title = "xemchitiet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<style type="text/css">
    .product-detail {
        position: relative;
        width: 100%;
        padding: 30px 0;
        margin: auto
    }

        .product-detail .product-detail-top,
        .product-detail .product-detail-bottom {
            margin-bottom: 30px;
        }

        .product-detail .product-detail-top {
            padding: 0;
            background: #e7ecd9;
        }

        .product-detail img {
            width: 100%;
        }

        .product-detail .product-content,
        .product-detail .product-content .title,
        .product-detail .product-content .details,
        .product-detail .product-content .action {
            position: relative;
            width: 100%;
        }

        .product-detail .product-content {
            padding: 30px;
        }



            .product-detail .product-content .title h2 {
                font-size: 25px;
                margin-bottom: 5px;
            }

            .product-detail .product-content .action a:first-child {
                margin-right: 11px;
            }

            .product-detail .product-content .action a i {
                margin-right: 5px;
            }

        .product-detail .nav.nav-pills .nav-link {
            color: #75AAAA;
            background: #000000;
            border-radius: 0;
            transition: all .3s;
        }

            .product-detail .nav.nav-pills .nav-link:hover,
            .product-detail .nav.nav-pills .nav-link.active {
                color: #000000;
                background: #75AAAA;
            }

        .product-detail .tab-content {
            background: #e7ecd9;
            padding: 25px 15px 15px 15px;
        }

            .product-detail .tab-content ul {
                margin: 0;
                padding: 0;
                list-style: none;
            }

                .product-detail .tab-content ul li {
                    margin-bottom: 10px;
                }

                    .product-detail .tab-content ul li::before {
                        content: '\f061';
                        font-family: 'Font Awesome 5 Free';
                        font-weight: 900;
                        padding-right: 5px;
                    }

            .product-detail .tab-content .form input {
                width: 100%;
                height: 35px;
                padding: 0 15px;
                color: #666666;
                border: 1px solid #dddddd;
                border-radius: 4px;
                margin-bottom: 15px;
            }

            .product-detail .tab-content .form textarea {
                width: 100%;
                height: 80px;
                padding: 6px 15px;
                color: #666666;
                border: 1px solid #dddddd;
                border-radius: 4px;
                margin-bottom: 15px;
            }

            .product-detail .tab-content .form button {
                display: inline-block;
                height: 35px;
                padding: 0 15px;
                color: #75AAAA;
                background: #e7ecd9;
                border: 1px solid #75AAAA;
                border-radius: 4px;
                margin-bottom: 15px;
                transition: all .3s;
            }

                .product-detail .tab-content .form button:hover {
                    color: #e7ecd9;
                    background: #75AAAA;
                }

    .container-fluid {
        padding-right: 100px;
        padding-left: 100px;
    }

    .btn {
        color: #75AAAA;
        background: #ffffff;
        border: 1px solid #75AAAA;
    }
</style>

<div class="product-detail">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="title">
                    <h2>CHI TIẾT SẢN PHẨM</h2>
                </div>
                <div class="product-detail-top">
                    <div class="row align-items-center">
                        <div class="col-md-5">
                            <div class="product-slider-single">
                                <img src="@Url.Content("~/HinhanhSP/" +@Model.Anhbia)" />
                            </div>
                        </div>
                        <div class=" col-md-7">
                            <div class="product-content">
                                <div>
                                    <h2> @Model.Tensp</h2>
                                    <h3 style="color:red">Giá: @Html.DisplayFor(modelItem => Model.Giatien)</h3> 
                                    <h3 style="color:black">Dung lượng Ram: @Model.Ram GB</h3>
                                    <h3 style="color:black">Khe cắm thẻ sim : @Model.Thesim</h3>
                                    <br />
                                    <div style="padding-left: 100px">
                                        @using (Html.BeginForm("ThemGioHang", "GioHang", new { @iMasp = Model.Masp, @strURL = Request.Url.ToString() }))
                                        {
                                            <input class="btn" type="submit" value="Mua hàng" id="bgnGioHang" />

                                        }
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="row product-detail-bottom">
                    <div class="col-lg-12">
                        <ul class="nav nav-pills nav-justified">
                            <li class="nav-item">
                                <a class="nav-link active" data-toggle="pill" href="#description">Mô tả</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="pill" href="#specification">Nổi bật</a>
                            </li>
                        </ul>

                        <div class="tab-content">
                            <div id="description" class="container tab-pane active" style='padding: 3px; width: 830px; word-wrap: normal'>
                                <h4>Mô tả chi tiết sản phẩm</h4>
                                <p>
                                    <h3 style="color:black">@Model.Mota</h3>
                                    <h3 style="color:black">Bộ nhớ trong: @Model.Bonhotrong</h3>
                                    <h3 style="color:black">Ram: @Model.Ram</h3>
                                    <h3 style="color:black">Khe cắm thẻ sim: @Model.Thesim</h3>
                                </p>
                            </div>
                            <div id="specification" class="container tab-pane fade" style='padding: 3px; width: 830px; word-wrap: normal'>
                                <h4>ĐIỂM NỔI BẬT</h4>                                
                                <ul>
                                    <b><span> @Model.Noibat</span></b>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
